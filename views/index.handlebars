<h1>BURGERS BURGERS BURGERS</h1>

<h2>Create Your Favorite Burger</h2>

<ul>
	{{#each burgers}}
		{{#unless devoured}}
		{{>burgers/burger-block devoured=true}}
	{{/unless}}
	{{/each}}
</ul>

<h2>DEVOUR THIS BURGER</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Hungry!<br>
    <input type="radio" name="hungry" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>